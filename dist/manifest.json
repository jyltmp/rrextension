{
    "manifest_version": 3,
    "name": "RR Extension",
    "version": "1.0.0",
    "description": "Extension for RR platform",
    "icons": {
      "32": "images/icon32.png",
      "128": "images/icon128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "tabs",
        "alarms",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["popup/index.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }